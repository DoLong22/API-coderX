extends ../layout/common
block content
    h1 Login
    if errors 
        each error in errors
            .alert.alert-danger.error= error
    form(aciton='/auth/login' method='POST')
        .form-group
            label(for="email") Email
            input#name.form-control(name = 'email' type='text' value=values?values.name:'')
            label(for="password") Password
            input#phone.form-control(name = 'password' type='password' value=values?values.phone:'')
            //- label dùng for thì khi click vào sẽ nhảy đến id có tên === for
            button.btn.btn-primary.mt-3 Login