extends ../layout/common
block content
    h1 Create user
    if errors 
        each error in errors
            .alert.alert-danger.error= error
    form(aciton='/users/create' method='POST' enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            //- input#name.form-control(name = 'name' type='text' value=values?values.name:'')
            input#name.form-control(name = 'name' type='text')
            label(for="phone") Phone
            //- input#phone.form-control(name = 'phone' type='text' value=values?values.phone:'')
            input#phone.form-control(name = 'phone' type='text')
            label(for="email") Email
            //- input#name.form-control(name = 'email' type='text' value=values?values.email:'')
            input#email.form-control(name = 'email' type='text')
            label(for="password") Password
            //- input#phone.form-control(name = 'password' type='password' value=values?values.password:'')
            input#password.form-control(name = 'password' type='password')

            label(for="avatar") Avatar
            input#avatar.form-control-file(name = 'avatar' type='file')

            //- label dùng for thì khi click vào sẽ nhảy đến id có tên === for
            button.btn.btn-primary.mt-3 Create