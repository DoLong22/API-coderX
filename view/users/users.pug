extends ../layout/common
block content
    h1 User List
    a.btn.btn-primary(href='/users/create' ) Create New User
    form(class ="d-flex pt-2" action="/users/search", method='GET')
        input(class = "form-control" type="text" name='q' value = `${value}`)
        button(class= "btn btn-primary ml-2") Search
    table.table
        tr
            th Name
            th Phone
            th Action

        each user in users
            tr
                td= user.name
                td=user.phone
                td
                    a(href="#") View